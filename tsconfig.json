{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "api/**/*"],
  "files": ["src/types/express.d.ts"],
  "exclude": ["tests", "**/*.test.ts"]
}
