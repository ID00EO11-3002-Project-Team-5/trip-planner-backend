{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["esnext"],
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node", "multer", "express", "jest"],
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "files": ["src/types/express.d.ts"],
  "exclude": ["tests", "**/*.test.ts"]
}
